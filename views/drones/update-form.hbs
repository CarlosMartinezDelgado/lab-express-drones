<h2>Update the drone</h2>

<form method="POST" action="/drones/{{oneDrone.id}}/edit">

  <div class="input-group mb-3">
    <span
      for="name"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Name</span>
    <input
      name="name"
      type="text"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
      value="{{oneDrone.name}}"
    />
  </div>

  <div class="input-group mb-3">
    <span
      for="propellers"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Propeller</span>
    <input
      name="propellers"
      type="number"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
      value="{{oneDrone.propellers}}"
    />
  </div>

  <div class="input-group mb-3">
    <span
      for="maxSpeed"
      class="input-group-text"
      id="inputGroup-sizing-default"
    >Max Speed</span>
    <input
      name="maxSpeed"
      type="number"
      class="form-control"
      aria-label="Sizing example input"
      aria-describedby="inputGroup-sizing-default"
      value="{{oneDrone.maxSpeed}}"
    />
  </div>

  <a href="/drones"><button class="btn btn-outline-success">Actualizar Drone</button></a>

</form>